---
# {{ ansible_managed }}
# Do not edit manually unless you know what your doing ;)

{% for host in shelleg_hosts.infra %}
- name: {{ shelleg.prefix }}-{{ host.cname }}
  box: {{ host.box }}
  ram: {{ host.ram }}
  ip:  {{ host.ip }}

{% endfor %}

{% for host in shelleg_hosts.swarm.swarm_managers %}
- name: {{ shelleg.prefix }}-{{ host.cname }}
  box: {{ host.box }}
  ram: {{ host.ram }}
  ip:  {{ host.ip }}

{% endfor %}

{% for host in shelleg_hosts.swarm.swarm_workers %}
- name: {{ shelleg.prefix }}-{{ host.cname }}
  box: {{ host.box }}
  ram: {{ host.ram }}
  ip:  {{ host.ip }}
  
{% endfor %}

