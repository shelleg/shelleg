---
# {{ ansible_managed }}
# Do not edit manually unless you know what your doing ;)

{% for host in shelleg_hosts.infra %}
- name: {{ host.cname }}
  box: {{ host.box }}
  ram: {{ host.ram }}
  ip:  {{ host.ip }}
  {% if storage_mode == "nfs_with_extra_disk" %}
	devices:
    size: {{ host.nfs_volume_size }}
  {% endif %}
{% endfor %}

{% for host in shelleg_hosts.swarm.swarm_managers %}
- name: {{ host.cname }}
  box: {{ host.box }}
  ram: {{ host.ram }}
  ip:  {{ host.ip }}

{% endfor %}

{% for host in shelleg_hosts.swarm.swarm_workers %}
- name: {{ host.cname }}
  box: {{ host.box }}
  ram: {{ host.ram }}
  ip:  {{ host.ip }}
  
{% endfor %}

